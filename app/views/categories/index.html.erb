<p id="notice"><%= notice %></p>

<h1 class="text-center">Categories</h1>

<table class="table table-striped my-3">
  <thead class="thead-dark">
    <tr>
      <th>Category</th>
      <th>Privacy</th>
      <th style="text-align: center">Change Privacy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.public ? "Public" : "Private" %></td>
        <td style="text-align: center"><%= link_to 'change', public_active_path(category.id) %></td>
        <td><%= link_to 'Show', category %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', root_path, class: 'btn btn-primary mt-2' %>
<%= link_to 'New Category', new_category_path, class: 'btn btn-primary mt-2' %>
